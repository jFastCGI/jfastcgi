<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
       <groupId>org.sonatype.oss</groupId>
       <artifactId>oss-parent</artifactId>
       <version>7</version>
     </parent>

    <groupId>org.jfastcgi.parent</groupId>
    <artifactId>jfastcgi-build</artifactId>
    <version>2.4-SNAPSHOT</version>
    <packaging>pom</packaging>


    <prerequisites>
        <maven>3.0</maven>
    </prerequisites>

    <name>jFastCGI - FastCGI for Java + the JVM</name>
    <description>
        The jFastCGI project is aimed at helping developers work with FastCGI on the Java platform.
        The jFastCGI project allows a servlet container to act as a fastCGI gateway so it can serve content generated by a fastCGI producer.
    </description>
    <url>http://www.jfastcgi.org</url>

    <scm>
        <connection>scm:git:git@github.com:jFastCGI/jfastcgi.git</connection>
        <developerConnection>scm:git:git@github.com:domdorn/jfastcgi.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <site>
            <id>jfastcgi_website</id>
            <url>ftp://jfastcgi.org/</url>
        </site>
    </distributionManagement>

    <modules>
        <module>parent</module>
        <module>server</module>
        <module>client</module>
	<module>samples</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <pushChanges>false</pushChanges>
                    <localCheckout>true</localCheckout>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <locales>en</locales>
                    <stagingDirectory>/tmp/stage</stagingDirectory>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <!-- Enabling the use of FTP -->
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ftp</artifactId>
                <version>2.4</version>
            </extension>
        </extensions>
        <pluginManagement>
        	<plugins>
        		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
        		<plugin>
        			<groupId>org.eclipse.m2e</groupId>
        			<artifactId>lifecycle-mapping</artifactId>
        			<version>1.0.0</version>
        			<configuration>
        				<lifecycleMappingMetadata>
        					<pluginExecutions>
        						<pluginExecution>
        							<pluginExecutionFilter>
        								<groupId>
        									org.apache.maven.plugins
        								</groupId>
        								<artifactId>
        									maven-checkstyle-plugin
        								</artifactId>
        								<versionRange>
        									[2.10,)
        								</versionRange>
        								<goals>
        									<goal>check</goal>
        								</goals>
        							</pluginExecutionFilter>
        							<action>
        								<ignore></ignore>
        							</action>
        						</pluginExecution>
        						<pluginExecution>
        							<pluginExecutionFilter>
        								<groupId>
        									org.zeroturnaround
        								</groupId>
        								<artifactId>
        									jrebel-maven-plugin
        								</artifactId>
        								<versionRange>
        									[1.1.3,)
        								</versionRange>
        								<goals>
        									<goal>generate</goal>
        								</goals>
        							</pluginExecutionFilter>
        							<action>
        								<ignore></ignore>
        							</action>
        						</pluginExecution>
        					</pluginExecutions>
        				</lifecycleMappingMetadata>
        			</configuration>
        		</plugin>
        	</plugins>
        </pluginManagement>
    </build>



    <mailingLists>
        <mailingList>
            <name>Announcements</name>
            <subscribe>jfastcgi-announces@lists.sourceforge.net</subscribe>
        </mailingList>
    </mailingLists>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
        <license>
            <name>The BSD 2-Clause License</name>
            <url>./LICENSE_JRIALLAND.txt</url>
        </license>
        <license>
            <name>Open Market, Inc. License</name>
            <url>./LICENSE_OPEN_MARKET.txt</url>
        </license>
    </licenses>

    <organization>
        <name>The jFastCGI Open Source Project</name>
        <url>http://www.jfastcgi.org</url>
    </organization>

    <inceptionYear>2009</inceptionYear>
    <developers>
        <developer>
            <id>jrialland</id>
            <name>Julien Rialland</name>
            <email>julien.rialland@gmail.com</email>
            <url>http://jrialland.wordpress.com</url>
        </developer>
        <developer>
            <id>domdorn</id>
            <name>Dominik Dorn</name>
            <email>dominik.dorn@gmail.com</email>
            <url>http://dominikdorn.com</url>
        </developer>
    </developers>

    <contributors>
        <contributor>
            <name>Barry Van Somneren</name>
            <email>barry@coffeesprout.com</email>
            <organization>CoffeeSprout</organization>
            <organizationUrl>http://www.coffeesprout.com</organizationUrl>
            <url>http://blog.bvansomeren.com</url>
        </contributor>
    </contributors>

    <profiles>
        <profile>
            <id>release-sign-artifacts</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
